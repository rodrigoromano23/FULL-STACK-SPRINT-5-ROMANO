



<h1>Listado de Países con Habla Española</h1>

<% if(paises.length === 0) { %>
    <p>No se encontraron países.</p>
<% } %>

<style>
    body{
        background-image: url('/img/fondo.png');
    }
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .pais-card {
    background: #ffffffff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .pais-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
  }

  .card-header {
    background: #0077b6;
    color: white;
    border-radius: 8px;
    padding: 10px;
    text-align: center;
    margin-bottom: 12px;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.2rem;
  }

  .card-body p {
    margin: 6px 0;
    font-size: 0.95rem;
  }

  .card-body strong {
    color: #0077b6;
  }

  .card-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
  }

  .btn {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 6px;
    background: #0077b6;
    color: white;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.2s ease;
  }

  .btn:hover {
    background: #023e8a;
  }

  .btn-outline {
    background: transparent;
    border: 1px solid #0077b6;
    color: #0077b6;
  }

  .btn-outline:hover {
    background: #0077b6;
    color: white;
  }
</style>

<div class="cards-grid">
<% paises.forEach(pais => { %>
    <div class="pais-card">
        <div class="card-header">
            <h2><%= pais.nameOfficial %></h2>
        </div>
        <div class="card-body">
            <p><strong>Capital:</strong> <%= pais.capital %></p>
            <p><strong>Borders:</strong> <%= pais.borders.join(', ') %></p>
            <p><strong>Área:</strong> <%= pais.area %></p>
            <p><strong>Población:</strong> <%= pais.poblacion %></p>
            <p><strong>Gini:</strong> <%= pais.gini %></p>
            <p><strong>Timezones:</strong> <%= pais.timezones.join(', ') %></p>
        </div>
        <div class="card-actions">
            <a class="btn" href="/paises/editar/<%= pais._id %>">Editar</a>
            <a class="btn btn-outline" href="/paises/eliminar/<%= pais._id %>">Eliminar</a>
        </div>
    </div>
<% }) %>
</div>
<!--paginacion-->
<div class="pagination">
  <% for(let i = 1; i <= totalPaginas; i++) { %>
    <a href="/dashboard?page=<%= i %>" 
       class="page-link <%= i === currentPage ? 'active' : '' %>">
       <%= i %>
    </a>
  <% } %>
</div>





