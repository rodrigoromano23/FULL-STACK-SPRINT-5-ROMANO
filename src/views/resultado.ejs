

<div class="resultado-container">
  <h1><%= title %></h1>

  <% if (paises.length > 0) { %>
  <div class="cards-grid">
    <% paises.forEach(pais => { %>
      <div class="pais-card">
        <div class="card-header">
          <h2><%= pais.nameOfficial %></h2>
        </div>
        <div class="card-body">
          <p><strong>Capital:</strong> <%= pais.capital %></p>
          <p><strong>Región:</strong> <%= pais.region %></p>
          <p><strong>Población:</strong> <%= pais.poblacion %></p>
          <p><strong>Gini:</strong> <%= pais.gini %></p>
          <p><strong>Timezones:</strong> <%= pais.timezones && pais.timezones.length > 0 ? pais.timezones.join(", ") : "N/A" %></p>
          <p><strong>Fronteras:</strong> <%= pais.borders && pais.borders.length > 0 ? pais.borders.join(", ") : "N/A" %></p>
        </div>
      </div>
    <% }) %>
  </div>
  <% } else { %>
    <p style="text-align:center;">No se encontraron resultados para tu búsqueda.</p>
  <% } %>

  <div style="text-align:center; margin-top:20px;">
    <a href="/" class="btn">Volver al Inicio</a>
  </div>
</div>

<style>
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .pais-card {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .pais-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
  }

  .card-header {
    background: #0077b6;
    color: white;
    border-radius: 8px;
    padding: 10px;
    text-align: center;
    margin-bottom: 12px;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.2rem;
  }

  .card-body p {
    margin: 6px 0;
    font-size: 0.95rem;
  }

  .card-body strong {
    color: #0077b6;
  }

  .btn {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 6px;
    background: #0077b6;
    color: white;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 0.2s ease;
  }

  .btn:hover {
    background: #023e8a;
  }
</style>


